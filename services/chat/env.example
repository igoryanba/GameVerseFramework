# База данных
DATABASE_URL=postgresql://gameverse:gameverse@localhost:5434/gameverse_chat
DATABASE_MAX_CONNECTIONS=10

# Redis
REDIS_URL=redis://localhost:6380
REDIS_MAX_CONNECTIONS=10

# Серверы
HTTP_PORT=8080
GRPC_PORT=50053
WEBSOCKET_PORT=8081

# Логирование
LOG_LEVEL=info
LOG_FORMAT=json

# Безопасность
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
RATE_LIMIT_MESSAGES_PER_MINUTE=30
RATE_LIMIT_BURST_SIZE=5

# Чат настройки
MAX_MESSAGE_LENGTH=2000
MAX_CHANNEL_PARTICIPANTS=100
MESSAGE_HISTORY_DAYS=30
DEFAULT_VOICE_RANGE=10.0

# Голосовой чат
VOICE_ENABLED=true
PMA_VOICE_INTEGRATION=true
PROXIMITY_RANGE_MAX=50.0
VOICE_QUALITY_DEFAULT=medium

# Каналы
GLOBAL_CHAT_ENABLED=true
LOCAL_CHAT_ENABLED=true
RADIO_CHAT_ENABLED=true
OOC_CHAT_ENABLED=true
ADMIN_CHAT_ENABLED=true

# Telegram интеграция (опционально)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/telegram/webhook

# Интеграции с другими микросервисами
AUTH_SERVICE_URL=http://localhost:8079
PLAYER_SERVICE_URL=http://localhost:8082
LOGGING_SERVICE_URL=http://localhost:50051

# Развертывание
ENVIRONMENT=development
SERVER_NAME=GameVerse Chat Service
SERVER_VERSION=0.1.0

# Мониторинг
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
METRICS_PORT=9090

# Кеширование
CACHE_TTL_SECONDS=300
CACHE_ENABLED=true 